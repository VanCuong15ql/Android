<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/showTop"
        android:text=""
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:gravity="right|bottom"/>
    <TextView
        android:id="@+id/showUnder"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="60dp"
        android:gravity="right|bottom"
        android:padding="10dp"
        android:text="0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#CEC6C6">

        <Button
            android:id="@+id/buttonCE"
            android:text="CE"

            android:background="@drawable/botron_button"
            app:backgroundTint="@color/black"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:layout_weight="1"
            />

        <Button
            android:id="@+id/buttonC"
            android:text="C"
            android:textSize="25dp"
            android:background="@drawable/botron_button"
            android:textStyle="bold|italic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:backgroundTint="@color/black"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <Button
            android:text="BS"
            android:id="@+id/buttonBS"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/black"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/buttondiv"
            android:text="/"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="#90141313"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#CEC6C6">

        <Button
            android:id="@+id/button7"
            android:textStyle="bold"
            android:text="7"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button8"
            android:textStyle="bold"
            android:text="8"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/button9"
            android:text="9"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/buttonx"
            android:text="x"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="#90141313"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#CEC6C6">
        <Button
            android:id="@+id/button4"
            android:text="4"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button5"
            android:text="5"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button6"
            android:text="6"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/buttonsub"
            android:text="-"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="#90141313"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="horizontal"
        android:background="#CEC6C6">
        <Button
            android:id="@+id/button1"
            android:text="1"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button2"
            android:text="2"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/button3"
            android:text="3"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="@color/number_button"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/buttonAdd"
            android:text="+"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/botron_button"
            app:backgroundTint="#90141313"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#CEC6C6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonInt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/botron_button"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:backgroundTint="@color/number_button" />

        <Button
            android:id="@+id/button0"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/botron_button"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:backgroundTint="@color/number_button" />

        <Button
            android:id="@+id/buttonDot"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/botron_button"
            android:text="."
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:backgroundTint="@color/number_button" />

        <Button
            android:id="@+id/buttonResult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/botron_button"
            android:text="="
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:backgroundTint="#0025FF" />
    </LinearLayout>
</LinearLayout>